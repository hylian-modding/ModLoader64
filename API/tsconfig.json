{
  "rootDir": "./",
  "outDir": "build",
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNEXT",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@sound/*": [
        "./build/emulator/*"
      ]
    },
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "mods/**/*.ts",
    "cores/**/*.ts",
    "bin/paker.ts",
	  "tools/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "API",
    "build.ts",
    "build",
    "cores"
  ]
}